// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // ‚Üê Make sure this line is here
}

// Rest of your schema remains the same...
enum Role {
  ADMIN
  MANAGER
  MEMBER
}

enum Country {
  INDIA
  AMERICA
}

enum OrderStatus {
  CART
  PLACED
  CONFIRMED
  PREPARING
  DELIVERED
  CANCELLED
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  name          String
  role          Role
  country       Country
  
  paymentMethod PaymentMethod?
  orders        Order[]
  
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  @@map("users")
}

model PaymentMethod {
  id             String   @id @default(uuid())
  userId         String   @unique
  cardNumber     String
  cardHolderName String
  expiryDate     String
  cvv            String
  
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@map("payment_methods")
}

model Restaurant {
  id          String     @id @default(uuid())
  name        String
  description String?
  country     Country
  imageUrl    String?
  
  menuItems   MenuItem[]
  orders      Order[]
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@map("restaurants")
}

model MenuItem {
  id           String      @id @default(uuid())
  restaurantId String
  name         String
  description  String?
  price        Decimal     @db.Decimal(10, 2)
  category     String
  imageUrl     String?
  isAvailable  Boolean     @default(true)
  
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  orderItems   OrderItem[]
  
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  
  @@map("menu_items")
}

model Order {
  id           String      @id @default(uuid())
  userId       String
  restaurantId String
  status       OrderStatus @default(CART)
  totalAmount  Decimal     @db.Decimal(10, 2) @default(0)
  country      Country
  
  user         User        @relation(fields: [userId], references: [id])
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])
  orderItems   OrderItem[]
  
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  
  @@map("orders")
}

model OrderItem {
  id         String   @id @default(uuid())
  orderId    String
  menuItemId String
  quantity   Int
  price      Decimal  @db.Decimal(10, 2)
  
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
  
  createdAt  DateTime @default(now())
  
  @@map("order_items")
}